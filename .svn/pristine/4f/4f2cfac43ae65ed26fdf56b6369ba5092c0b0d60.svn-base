#opportunityInformation {
    border-radius: 11px 11px 11px 11px;
-moz-border-radius: 11px 11px 11px 11px;
-webkit-border-radius: 11px 11px 11px 11px;
border: 1px solid #D6D6D6 ;
}

#opportunityInformation .row.form-group{
    height: 35px;
}

#activitySummary, #activityBreakdown, #activitySummaryFTE {
    padding-bottom: 15px;
}

.accordion-toggle > div {
    border: 0;
}

#oppotunityButtons {
    padding: 0;
    margin-bottom: 20px;
}



/* Activity Breakdown */

#activity-list > li > a {
    color: #333 !important;
}

#activity-list > li > a > .glyphicon, .activityBreakdown-resource-info .glyphicon {
    color: #d9534f;
}

.activityBreakdown-resource-info .glyphicon-edit {
    color: #76abc5;
}

.activityBreakdown-resource-info .glyphicon-trash {
     margin-left: 3px;
     margin-top: 8px;
}

#activity-list > li > a > .glyphicon:hover, .activityBreakdown-resource-info .glyphicon:hover {
    text-decoration: none;
    cursor: pointer;
}

#activity-list > li.active > a {
    background: #bdbdbd;
    color: #fff !important;
}

#addActivityButton .glyphicon {
    color: #5cb85c;
}

#activityBreakdown-header {
    color: #31708f;
    background-color: #d9edf7;
    border-color: #bce8f1;
    border-style: solid;
    border-radius: 5px 0 0 0;
    border-width: 1px;
}

#activityBreakdown-header .glyphicon-plus-sign {
    margin: 3px 9px 3px 3px;
}

#activityBreakdown-header > div:nth-child(-n+3) {
    border-right: solid #bce8f1 1px;
}

.activityBreakdown-resource-row {
    border-left: solid #ccc 1px;
}

.activityBreakdown-resource-info > div {
    border-bottom: solid #ccc 1px;
    border-right: solid #ccc 1px;
    height: 45px;
    padding: 5px;
}

.line-height-30px {
    line-height: 30px;
}


.activityBreakdown-padding-edit select {
    margin: -7px 10px;
    padding-left: 0;
    padding-right: 0;
}

#activityRole {
    width: 82%;
}

#activityBreakdown-dateHeader {
    color: #a94442;
    background-color: #FFCDD2;
    border-color: #eab3b2;
    border-style: solid;
    border-radius: 0 5px 0 0;
    border-width: 0 0 0 1px;
}

#activityBreakdown-dateHeader .col-xs-12 {
    border-bottom: solid #eab3b2 1px;
    border-right: solid #eab3b2 1px;
    border-radius: 0 5px 0 0;
}

.activityBreakdown-period-row {
    position: relative;
    white-space: nowrap;
    overflow-x: auto;
    overflow-y: hidden;
    vertical-align: middle;
}

.activityBreakdown-period-row .col-xs-12 {
    padding: 0;
}

.activityBreakdown-period-row div:first-child .col-xs-12:first-child {
    border-left: solid #eab3b2 1px;
}



.period-div-header {
    display: inline-block;
    border-bottom: solid #eab3b2 1px;
    border-right: solid #eab3b2 1px;
    color: #a94442;
    background-color: #ffcdd2;
}

.period-div-content {
    border-bottom: solid #ccc 1px;
    border-right: solid #ccc 1px;
    display: inline-block;
}

