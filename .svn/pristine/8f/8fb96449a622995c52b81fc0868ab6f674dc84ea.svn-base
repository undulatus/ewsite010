body{
    height: 100%;
    width: 100%;
    position: fixed;
    overflow: hidden;
}
.component-page-holder{
    position:relative;
    top: 60px;
    height:calc(100% - 60px);
    overflow-y: auto; 
}
.page-container{
    height: 100% !important;
    width: 100% !important;
}
nav{
    margin-bottom: 0px !important;
}
.full-width{
    width:100% !important;
}
.full-height{
    height: 100% !important;
}
.imghover:hover{
    cursor: pointer;
}
.adjust-nav-height{
    padding-top: 56px;
}
.nav-height{
    height: 50px;
}
.scroll-overflow{
    overflow-y: auto; 
}
.body-container{
    position:relative;
    height: 100%;
    overflow:hidden;
}
a.navbar-brand{
    color: #feeed6 !important;
}
